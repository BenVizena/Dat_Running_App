<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.dat_running_app.MainActivity"
    tools:showIn="@layout/activity_main">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/mainToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dat Running App!"
                android:textSize="26dp"

                android:textColor="@color/toolbarTextColor"
                android:layout_gravity="center"
                android:id="@+id/mainToolbar_title"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <TableLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/main_page_tableLayout"
        android:shrinkColumns="TRUE"
        android:stretchColumns="TRUE"
        android:gravity="center">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/go_running_ib"
                    android:layout_height="175dp"
                    android:layout_width="175dp"
                    android:src="@drawable/go_running"
                    android:scaleType="fitCenter"
                 />

                <ImageButton
                    android:id="@+id/stats_ib"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/stats"
                 />

             </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip"
            android:gravity="center">

            <ImageButton
                android:id="@+id/runwear_ib"
                android:layout_height="175dp"
                android:layout_width="175dp"
                android:src="@drawable/runwear"
                android:scaleType="fitCenter"
                />

            <ImageButton
                android:id="@+id/setting_ib"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:scaleType="fitCenter"
                android:src="@drawable/setting_png"
                />

        </TableRow>

     </TableLayout>





</android.support.constraint.ConstraintLayout>
